spec Traffic

sys boolean greenA;
sys boolean greenB;

env boolean carA;
env boolean carB;

gar ini !greenA & !greenB;
gar alw !(greenA & greenB);
gar alw !carA -> !greenA;
gar alw !carB -> !greenB;
gar alwEv greenA;
gar alwEv greenB;

asm ini carA & !carB;
asm alwEv carA;
asm alwEv carB;

// Extend specification TrafficL1.spectra with the following assumptions
// Always eventually traffic will arrive at each light.
